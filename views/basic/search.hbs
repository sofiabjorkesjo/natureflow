<p class="uploadText"> Write in a hashtag to search for images that match.</p>
<form action="/search" method="post">
    <input type="search" name="search" id="search">
    <input type="submit" name="searchButton" id="searchButton" value="Search">
</form>

{{#if images}}
    {{#each images}}
        <div class="images">
            <p id="publishedBy">Published by <span class="user">{{owner}}</span></p>
        <div class="imageDiv">
            <a href='/images/{{ this.path }}' data-lightbox="image1"> <img src='/images/{{ this.path }}'></a>
        </div>

            <button class="addComment">Add comment</button>
            <button class="comments">Comments (<span class="commentsNumber">{{this.comments.length}}</span>)</button>
        </div>
        <div class="model">
            <div class="modal-content">
                <span class="close">&times;</span>
                <p>Write a comment here</p>
                <form action="/search/{{../word}}" method="post">
                    <input type="hidden" name="imageId" class="imageidtest" value="{{this.id}}">
                    <textarea rows="6" cols="50" name="comment" class="messageComment" maxlength="30"></textarea>
                    <br>
                    <!--<span class="counterText">You have <input disabled maxlength="30" size="2" value="30" class="counter"> charachters to write.</span> -->
                    <span class="feedback"></span>
                    <input type="submit" value="Post comment" class="postComment">

                </form>
            </div>
        </div>

        <div class="modelComments">
            <div class="modelComments-content" data-id="{{this.id}}">

                <span class="closeComments">x</span>
                <div class="CommentsDiv">
                    <h2>Comments</h2>
                </div>
                {{#each this.comments}}
                    <div class="commentsDiv">
                        <p class="testt"><span class="ownerComment">{{this.owner}}</span> "{{this.text}}"</p>
                        <p class="date">Published {{this.date}}</p>
                    </div>
                {{/each}}
            </div>
        </div>

    {{/each}}

    {{/if}}

<script src="/sockets.js"></script>
<script src="/comments.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/js/lightbox-plus-jquery.js"></script>
