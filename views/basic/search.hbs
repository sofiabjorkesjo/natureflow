{{>flash}}
<div id="searchDiv">

<p class="uploadText"> Write in word to search for images that match.</p>
<form action="/search" method="post">
    <input type="search" name="searchWord" id="search">
    <input type="submit" name="searchButton" id="searchButton" value="Search">
</form>
    <p class="uploadText"> Search for a user here.</p>
    <form action="/search" method="post">
        <input type="search" name="searchUser" id="search">
        <input type="submit" name="searchButtonUser" id="searchButton" value="Search">
    </form>
</div>
{{#if images}}
    {{#each images}}
        <div class="images">
            <p id="publishedBy">Published by <span class="user">{{owner}}</span></p>
            <div class="imageDiv">
                <a href='/images/{{ this.path }}' data-lightbox="image1"> <img src='/images/{{ this.path }}'></a>
            </div>
            <button class="comments">Comments (<span class="commentNumber">{{comments.length}})</span></button>
        </div>

        <div class="modelComments">
            <div class="modelComments-content">

                <span class="closeComments">x</span>
                <div class="CommentsDiv">
                    <h2>Comments</h2>
                </div>
                {{#each this.comments}}
                    <div class="commentsDiv">
                        <p><span class="ownerComment">{{this.owner}}</span> "{{this.text}}"</p>
                        <p class="date">Published {{this.date}}</p>
                    </div>
                {{/each}}
            </div>
        </div>

    {{/each}}

    {{/if}}


<script src="/comments.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/js/lightbox-plus-jquery.js"></script>
