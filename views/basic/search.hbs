{{>flash}}
<div id="searchDiv">

<p class="uploadText"> Write in word to search for images that match.</p>
<form action="/search" method="post">
    <input type="search" name="searchWord" id="search">
    <input type="submit" name="searchButton" id="searchButton" value="Search">
</form>
    <p class="uploadText"> Search for a user here.</p>
    <form action="/search" method="post">
        <input type="search" name="searchUser" id="search">
        <input type="submit" name="searchButtonUser" id="searchButton" value="Search">
    </form>
</div>
{{#if images}}
    {{#each images}}
        <div class="images">
            <p id="publishedBy">Published by <span class="user">{{owner}}</span></p>
            <div class="imageDiv">
                <a href='/images/{{ this.path }}' data-lightbox="image1"> <img src='/images/{{ this.path }}'></a>
            </div>

        </div>


    {{/each}}

    {{/if}}


