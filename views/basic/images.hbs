

{{#each images}}
    <div class="images">
      <p id="publishedBy">Published by <span class="user">{{owner}}</span></p>
        <div class="imageDiv">
<a href='/images/{{ this.path }}' data-lightbox="image1"> <img src='/images/{{ this.path }}'></a>
    </div>
        <button class="addComment">Add comment</button>
        <button class="comments">Comments</button>
    </div>

<div class="model">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Write a comment here</p>
        <form action="/images" method="post">
            <input type="hidden" name="imageId" class="imageidtest" value="{{this.id}}">
            <textarea rows="6" cols="50" name="comment"></textarea>
            <br>
            <input type="submit" value="Post comment" class="postComment">
        </form>
    </div>
</div>

    <div class="modelComments">
         <div class="modelComments-content">

             <span class="closeComments">x</span>
               <div class="CommentsDiv">
                   <h2>Comments</h2>
               </div>
             {{#each this.comments}}
                 <div class="commentsDiv">
                    <p><span class="ownerComment">{{this.owner}}</span> "{{this.text}}"</p>
                     <p class="date">Published {{this.date}}</p>
                 </div>
             {{/each}}
         </div>
    </div>

{{/each}}

<script src="comment.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/js/lightbox-plus-jquery.js"></script>
