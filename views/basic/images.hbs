

{{#each images}}
    <div class="images">
      <p id="publishedBy">Published by {{owner}}</p>
        <div class="imageDiv">
<a href='/images/{{ this.path }}' data-lightbox="image1"> <img src='/images/{{ this.path }}'></a>
            
    </div>
        <button class="addComment">Add comment</button>
        <p id="comments">Comments: (0)</p>
    </div>




<div class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Write a comment here</p>
        <form action="/images" method="post">
            <input type="hidden" name="test" class="imageidtest">
            <textarea rows="6" cols="50" name="comment"></textarea>
            <br>
            <input type="submit" value="Post comment" class="postComment">
        </form>
    </div>
</div>

{{/each}}

<script src="comment.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/js/lightbox-plus-jquery.js"></script>
