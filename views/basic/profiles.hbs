

<div id="usernameProfile">
    This profile and images belongs to <span class="user">{{data}}</span>.
</div>

{{#if images}}

    {{#each images}}

        <div class="images">


            <div class="imageDiv">
                <a href='/images/{{ this.path }}' data-lightbox="image1"> <img src='/images/{{ this.path }}'></a>
            </div>
            <button class="comments">Comments (<span class="commentNumber">{{comments.length}})</span></button>
        </div>


        <div class="modelComments">
            <div class="modelComments-content">

                <span class="closeComments">x</span>
                <div class="CommentsDiv">
                    <h2>Comments</h2>
                </div>
                {{#each this.comments}}
                    <div class="commentsDiv">
                        <p><span class="ownerComment">{{this.owner}}</span> "{{this.text}}"</p>
                        <p class="date">Published {{this.date}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/each}}
{{else}}
    <p class="profileNoImages">{{data}} havenÂ´t uploaded any images.</p>
{{/if}}


<script src="/comments.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.9.0/js/lightbox-plus-jquery.js"></script>