<div id="uploadDiv">
    <p class="uploadText">Upload your image here. The image must be type jpeg or png.</p>
    <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="button" value="Choose file..." id="upload">
        <input type="file" id="uploadPicture" name="imgFile">
        <input type="submit" id="upload" value="Upload" name="upload" >
        <p class="uploadText">Write some hashtags to describe your image</p>
        <input id="hashtags" name="hashtags">

    </form>

</div>


<div id="imageDiv"></div>

<script src="upload.js"></script>


